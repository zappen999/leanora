{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "alwaysStrict": true,
    "types": ["node"],
    "typeRoots": [
      "src/types"
    ],
    "baseUrl": "src",
    "paths": {
      "utils/*": ["util/*"],
      "features/*": ["features/*"]
    },
    "jsx": "react"
  },
  "lib": ["es2015", "es6"],
  "exclude": [
    "node_modules"
  ]
}
